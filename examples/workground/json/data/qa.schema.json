{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "qa": {
      "type": "object",
      "properties": {
        "version": { "type": "string" },
        "raw_data": { "$ref": "#/definitions/data_level" },
        "survey_products": { "$ref": "#/definitions/data_level" }
      },
      "required": [
        "version", "raw_data", "survey_products"
      ]
    },
    "data_level": {
      "type": "object",
      "properties": {
        "checks": {
          "type": "array",
          "items": { "$ref": "#/definitions/check" },
          "default": []
        }
      },
      "required": [
        "checks"
      ]
    },
    "check": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "version": { "type": "string" },
        "inputs": { "$ref": "#/definitions/inputs" },
        "outputs": { "$ref": "#/definitions/outputs" },
        "params": { "$ref": "#/definitions/params" }
      },
      "required": [
        "name"
      ]
    },
    "inputs": {
      "type": "object",
      "properties": {
        "path": { "type": "string" }
      },
      "required": [
        "path"
      ]
    },
    "outputs": {
      "type": "object",
      "properties": {
        "path": { "type": "string" },
        "count": { "type": "number" },
        "grade": { "type": "number" }
      },
      "required": [
      ]
    },
    "params": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "threshold": { "type": "number" }
      },
      "required": [
      ]
    }
  },
  "type": "object",
  "properties": {
    "qa": {"$ref": "#/definitions/qa"}
  },
  "required": ["qa"]
}

